# Authentication Environment Variables

# Session secret (generate with: openssl rand -base64 32)
AUTH_SECRET=

# Trust host in production (required for Auth.js)
AUTH_TRUST_HOST=true

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Microsoft Entra ID (Azure AD)
MICROSOFT_ENTRA_ID_CLIENT_ID=""
MICROSOFT_ENTRA_ID_CLIENT_SECRET=""
MICROSOFT_ENTRA_ID_TENANT_ID=""

# GitHub OAuth (optional, for developer convenience)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Filepath definitions
DATABASE_URL="C:\EXAMPLE\TimmyLine\src\lib\server\data\timmyLine.db"
LOG_FILEPATH="C:\EXAMPLE\TimmyLine\src\lib\server\data\timmyLine.log"
LOG_WRITETOPATH=false

# CORS origin for Socket.IO
ORIGIN="http://localhost:5173"

# MCP Server
# Session token for MCP server API authentication
# Copy from your browser's authjs.session-token cookie after logging in
MCP_API_TOKEN=""
